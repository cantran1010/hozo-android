fastlane_version "2.37.0"

default_platform :android

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Submit a new Beta Build to HockeyApp"
  lane :beta do
    gradle(task: "assembleDebug")
    hockey
    build   = value = get_version_name(
                      gradle_file_path:"project/build.gradle",
                      ext_constant_name:"versionName"
                      )
    version = get_version_number_from_git_branch(pattern: 'release-#')
    slack(
      default_payloads: [],
      payload: {
         "Version" => "#{build} (#{version})",
        'Download'=> lane_context[SharedValues::HOCKEY_DOWNLOAD_LINK],
      },
    )
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    gradle(task: "assembleRelease")
    supply
  end

  error do |lane, exception|
    slack(
      message: exception.message,
      success: false
    )
  end
end
