<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/hozo_bg</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/hozo_bg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CustomProgressDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="full_screen_dialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

    </style>

    <style name="DialogSlideAnimFullScreenFadeInOut" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationFadeInOut</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- Just to prove it's working -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogSlideAnimFullScreenAnimDownUp" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimationDownUp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!-- Just to prove it's working -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DialogAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>


    <style name="DialogAnimationDownUp">
        <item name="android:windowEnterAnimation">@anim/from_down_to_up</item>
        <item name="android:windowExitAnimation">@anim/from_up_to_down</item>
    </style>

    <style name="pin_edit_text_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector_images</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>

    <style name="StarRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector_images_big</item>
        <item name="android:minHeight">31dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="tv_style_normal_black">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/tv_black</item>
    </style>

    <style name="tv_style_normal_gray">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/tv_gray</item>
    </style>

    <style name="edt_style_normal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tv_black</item>
        <item name="android:textColorHint">@color/edt_hint</item>
    </style>

    <style name="spinner_normal">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/edt_hint</item>
    </style>

    <!-- style title -->
    <style name="tv_title">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/hozo_bg</item>
    </style>

    <style name="btn_style_normal">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>

    <style name="btn_style_corners">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_corners_selector</item>
    </style>

    <style name="tv_title_cancel">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- style advance setting -->
    <style name="tv_advance_setting">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">16dp</item>
    </style>
    <!-- style verify_style-->

    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/hozo_bg</item>
        <item name="android:textSize">14sp</item>
    </style>
    // style my swicth

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/text_line</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray</item>
    </style>
    // check box

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="HozoAccountKit" parent="Theme.AccountKit">
        <item name="com_accountkit_input_background_color">@color/green_hozo</item>
        <item name="com_accountkit_button_background_color">@color/hozo_bg</item>

    </style>

    <color name="edt_hint">#AEAEAE</color>
    <!-- style setting advance -->
    <style name="week_day_style">
        <item name="android:textSize">@dimen/tv_size_xtiny</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_circle_default</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/hozo_bg</item>
    </style>
</resources>
