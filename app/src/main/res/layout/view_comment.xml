<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <vn.tonish.hozo.view.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/avatar_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bui Du long"
                android:textColor="@color/tv_gray_new"
                android:textSize="15sp" />

        </RelativeLayout>

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dang lam gi day"
            android:textColor="@color/tv_gray_new"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_attach_show"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="1dp"
            android:contentDescription="@string/just_image"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_time_ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:drawablePadding="5dp"
                android:text="10 phut truoc"
                android:textColor="@color/tv_gray_new"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/adjust_image"
                android:paddingBottom="5dp"
                android:paddingEnd="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="1dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:src="@drawable/img_menu_comment" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
