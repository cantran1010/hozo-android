<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_toLeftOf="@+id/tv_status"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:text="Cafe HotDog"
            android:textColor="@color/blue"
            android:textSize="@dimen/tv_size_medium"
            tools:ignore="RtlCompat" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_border_recruitment"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/recruitment"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_tiny" />


        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:text="15 phut truoc . Ha Noi . Phan loai : Cong nghe"
            android:textColor="@color/text_item_address"
            android:textSize="@dimen/tv_size_tiny" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_des"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:text="d 500,000"
            android:textColor="@color/text_money"
            android:textSize="@dimen/tv_size_medium" />
    </RelativeLayout>
</android.support.v7.widget.CardView>