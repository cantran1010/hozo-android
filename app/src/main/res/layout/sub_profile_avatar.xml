<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <vn.tonish.hozo.view.TextViewHozo
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_line"
        android:id="@+id/textViewHozo" />


    <vn.tonish.hozo.view.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginTop="23dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_default"
        android:layout_below="@+id/textViewHozo"
        android:layout_centerHorizontal="true" />


    <vn.tonish.hozo.view.TextViewHozo
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_xlager" />

    <vn.tonish.hozo.view.TextViewHozo
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_name"
        android:background="@drawable/bg_verify_profile"
        android:gravity="center"
        android:text="@string/profile_verifyed"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_verify" />


    <vn.tonish.hozo.view.TextViewHozo
        android:id="@+id/tv_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_item_address"
        android:textSize="@dimen/tv_size_xtiny" />

    <vn.tonish.hozo.view.TextViewHozo
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_birthday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_item_address"
        android:textSize="@dimen/tv_size_xtiny" />

    <vn.tonish.hozo.view.TextViewHozo
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_gender"
        android:layout_marginTop="18dp"
        android:background="@color/text_line" />

</RelativeLayout>