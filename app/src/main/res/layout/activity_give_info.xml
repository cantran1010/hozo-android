<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="vn.tonish.hozo.activity.profile.VerifyUserActivity">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/hozo_bg">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector_new"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_arrow" />

        <vn.tonish.hozo.view.TextViewHozo
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/give_info" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <vn.tonish.hozo.view.TextViewHozo
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/label_header_verify"
            android:textColor="@color/tv_gray_new"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@drawable/check_verify"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_screen"
                android:layout_marginStart="@dimen/margin_left_screen"
                android:drawableLeft="@drawable/verify_telephone"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/verify_telephone"
                android:text="@string/verify_phone_title"
                android:textSize="15sp" />

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/margin_right_screen"
                android:layout_marginRight="@dimen/margin_right_screen"
                android:text="@string/verified"
                android:textColor="@color/hozo_bg"
                android:textSize="12sp"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_screen"
                android:layout_marginStart="@dimen/margin_left_screen"
                android:drawableLeft="@drawable/verify_facebook"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/verify_facebook"
                android:text="@string/verify_facebook_title"
                android:textSize="15sp" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_verify_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="@string/verified"
                android:textColor="@color/hozo_bg"
                android:textSize="12sp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/email_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_screen"
                android:layout_marginStart="@dimen/margin_left_screen"
                android:drawableLeft="@drawable/verify_email"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/verify_email"
                android:text="@string/email_verify"
                android:textSize="15sp" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_verify_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="@string/verified"
                android:textColor="@color/hozo_bg"
                android:textSize="12sp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/email_verify_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e8f0f0"
            android:orientation="vertical"
            android:visibility="gone">

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_verify_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_right_screen"
                android:layout_marginLeft="@dimen/margin_left_screen"
                android:layout_marginRight="@dimen/margin_right_screen"
                android:layout_marginStart="@dimen/margin_left_screen"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:drawableEnd="@drawable/edit"
                android:drawableRight="@drawable/edit"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:minHeight="@dimen/edt_min_height"
                android:textColor="@color/tv_gray_new"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginEnd="@dimen/margin_right_screen"
                android:layout_marginLeft="@dimen/margin_left_screen"
                android:layout_marginRight="@dimen/margin_right_screen"
                android:layout_marginStart="@dimen/margin_left_screen"
                android:background="@color/gray" />

            <vn.tonish.hozo.view.ButtonHozo
                android:id="@+id/btn_send_email"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="@dimen/margin_right_screen"
                android:layout_marginLeft="@dimen/margin_left_screen"
                android:layout_marginRight="@dimen/margin_right_screen"
                android:layout_marginStart="@dimen/margin_left_screen"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_new_selector"
                android:text="@string/ben_verify_email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
