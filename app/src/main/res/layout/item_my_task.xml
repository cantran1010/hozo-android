<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/tv_status"
                android:layout_toStartOf="@+id/tv_status"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_size_medium"
                android:textStyle="bold" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_status"
                android:layout_width="85dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_border_recruitment"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="@string/recruitment"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_item_address"
            android:textSize="@dimen/tv_size_tiny"
            android:textStyle="italic" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_task_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@color/text_item_address"
            android:textSize="@dimen/tv_size_tiny"
            android:textStyle="italic" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@color/text_item_address"
            android:textSize="@dimen/tv_size_tiny"
            android:textStyle="italic" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_money"
            android:textSize="@dimen/tv_size_medium" />

    </LinearLayout>


</android.support.v7.widget.CardView>