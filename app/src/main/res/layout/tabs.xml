<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_footer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_menu_height"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#A4AAB2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_post_a_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_post_a_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/select_task_title"
                android:src="@drawable/menu_post_task" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_post_a_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_task_title"
                android:textSize="@dimen/menu_text_size" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layout_browser_task"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_browser_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/browse_task_title"
                    android:src="@drawable/menu_browser_task_selected" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_browser_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/browse_task_title"
                    android:textSize="@dimen/menu_text_size" />

            </LinearLayout>

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_count_new_task"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_circle_count_new_msg"
                android:gravity="center"
                android:maxLength="3"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="gone"
                tools:ignore="SmallSp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_my_task"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_my_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/my_task_title"
                android:src="@drawable/menu_my_task" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_my_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_task_title"
                android:textSize="@dimen/menu_text_size" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layout_inbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_inbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/notify_title"
                    android:src="@drawable/menu_inbox" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_inbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notify_title"
                    android:textSize="@dimen/menu_text_size" />

            </LinearLayout>

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_count_new_push"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/bg_circle_count_new_msg"
                android:gravity="center"
                android:maxLength="3"
                android:textColor="@color/white"
                android:textSize="8sp"
                tools:ignore="SmallSp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/other_title"
                android:src="@drawable/menu_other" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_title"
                android:textSize="@dimen/menu_text_size" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
