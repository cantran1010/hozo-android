<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/alert_dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/alert_dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp">

    <vn.tonish.hozo.view.TextViewHozo
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_radius"
        android:textColor="@color/tv_black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rg_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/sound">

        <RadioButton
            android:id="@+id/rb_everywhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radio_button_background"
            android:padding="5dp"
            android:text="@string/radius_everywhere" />

        <RadioButton
            android:id="@+id/rb_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radio_button_background"
            android:padding="5dp"
            android:text="@string/radius_5km" />

        <RadioButton
            android:id="@+id/rb_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radio_button_background"
            android:padding="5dp"
            android:text="@string/radius_10km" />

        <RadioButton
            android:id="@+id/rb_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radio_button_background"
            android:padding="5dp"
            android:text="@string/radius_15km" />

        <RadioButton
            android:id="@+id/rb_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radio_button_background"
            android:padding="5dp"
            android:text="@string/radius_20km" />

        <RadioButton
            android:id="@+id/rb_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radio_button_background"
            android:padding="5dp"
            android:text="@string/radius_25km" />

        <RadioButton
            android:id="@+id/rb_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:button="@drawable/radio_button_background"
            android:padding="5dp"
            android:text="@string/radius_50km" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:gravity="right">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/edt_min_height"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/report_cancel"
            android:textColor="@color/hozo_red" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/edt_min_height"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/report_ok"
            android:textColor="@color/hozo_bg" />


    </LinearLayout>

</LinearLayout>