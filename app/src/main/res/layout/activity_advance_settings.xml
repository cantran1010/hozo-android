<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_alpha"
        android:padding="16dp"
        android:text="@string/tv_guide_setting" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0">

            <TableRow
                android:id="@+id/tv_type"
                android:layout_height="50dp">

                <TextView
                    android:padding="16dp"
                    android:text="@string/tv_type_of_work" />

                <TextView
                    android:padding="16dp"
                    android:text="chan tay" />

                <TextView
                    android:padding="16dp"
                    android:text=">" />

            </TableRow>


            <include layout="@layout/line" />

            <TableRow

                android:id="@+id/tv_fee"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_fee_text"
                    android:padding="16dp"
                    android:text="@string/tv_fee" />

                <TextView
                    android:padding="16dp"
                    android:text="chan tay" />

                <TextView
                    android:padding="16dp"
                    android:text=">" />

            </TableRow>

            <include layout="@layout/line" />

            <TableRow
                android:id="@+id/tv_location"
                android:layout_height="50dp">

                <TextView
                    android:padding="16dp"
                    android:text="@string/tv_location" />

                <TextView
                    android:padding="16dp"
                    android:text="chan tay" />

                <TextView
                    android:padding="16dp"
                    android:text=">" />

            </TableRow>

            <include layout="@layout/line" />

            <TableRow

                android:id="@+id/tv_time"
                android:layout_height="50dp">

                <TextView

                    android:padding="16dp"
                    android:text="@string/tv_time" />

                <TextView
                    android:padding="16dp"
                    android:text="chan tay" />

                <TextView
                    android:padding="16dp"
                    android:text=">" />

            </TableRow>


            <include layout="@layout/line" />

            <TableRow
                android:id="@+id/tv_sex"
                android:layout_height="50dp">

                <TextView
                    android:padding="16dp"

                    android:text="@string/tv_sex" />

                <TextView
                    android:padding="16dp"
                    android:text="chan tay" />

                <TextView
                    android:padding="16dp"
                    android:text=">" />

            </TableRow>


            <include layout="@layout/line" />

            <TableRow
                android:id="@+id/tv_age"
                android:layout_height="50dp">

                <TextView
                    android:padding="16dp"

                    android:text="@string/tv_age" />

                <TextView
                    android:padding="16dp"
                    android:text="chan tay" />

                <TextView
                    android:padding="16dp"
                    android:text=">" />

            </TableRow>

            <include layout="@layout/line" />

            <TableRow
                android:id="@+id/tv_notification"
                android:layout_height="50dp">

                <TextView
                    android:padding="16dp"

                    android:text="@string/tv_notification" />

                <TextView
                    android:padding="16dp"
                    android:text="chan tay" />

                <TextView
                    android:padding="16dp"
                    android:text=">" />

            </TableRow>

            <include layout="@layout/line" />

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_alpha"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/btn_save" />

</LinearLayout>