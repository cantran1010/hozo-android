<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_close_red" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_marginStart="@dimen/title_margin_left"
            android:layout_toEndOf="@id/img_back"
            android:layout_toRightOf="@id/img_back"
            android:text="@string/advance_setting_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_save"
        style="@style/btn_style_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_save" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_save"
        android:layout_below="@id/layout_header"
        android:background="@color/bg"
        android:orientation="vertical">

        <vn.tonish.hozo.view.TextViewHozo
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/tv_guide_setting"
            android:textColor="@color/text_advance"
            android:textSize="@dimen/tv_size_nomal" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_setting_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_advance_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_type_of_work"
                        android:textColor="@color/text_advance_label" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_work_type"
                        style="@style/tv_advance_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

                <include layout="@layout/line" />

                <LinearLayout
                    android:id="@+id/layout_setting_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_advance_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_fee"
                        android:textColor="@color/text_advance_label" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_price"
                        style="@style/tv_advance_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <include layout="@layout/line" />

                <LinearLayout
                    android:id="@+id/layout_setting_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_advance_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_location"
                        android:textColor="@color/text_advance_label" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_location"
                        style="@style/tv_advance_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:maxLines="1"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

                <include layout="@layout/line" />

                <LinearLayout
                    android:id="@+id/layout_setting_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_advance_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_radius"
                        android:textColor="@color/text_advance_label" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_radius"
                        style="@style/tv_advance_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="16dp"
                        tools:ignore="RtlHardcoded" />

                </LinearLayout>

                <include layout="@layout/line" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <vn.tonish.hozo.view.ButtonHozo
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_back_selector"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/btn_reset"
                android:textColor="@color/red"
                android:textSize="@dimen/tv_size_nomal" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>