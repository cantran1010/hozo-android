<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/hozo_bg">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/content_description_back"
            android:focusable="true"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_back"
            android:layout_toRightOf="@+id/img_back"
            android:text="@string/support_title" />

    </RelativeLayout>

    <vn.tonish.hozo.view.TextViewHozo
        style="@style/tv_style_normal_gray_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/support_des"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/support_phone_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_support_phone"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_support_on"
                android:contentDescription="@string/just_image"
                android:scaleType="centerInside"
                android:src="@drawable/support_img_phone" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_support_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/support_call"
                android:textColor="@color/hozo_bg"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/support_mail_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_support_mail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_support_off"
                android:contentDescription="@string/just_image"
                android:scaleType="centerInside"
                android:src="@drawable/support_img_msg" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_support_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/support_msg"
                android:textColor="@color/tv_gray_new"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/support_rate_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_support_rate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_support_off"
                android:contentDescription="@string/just_image"
                android:scaleType="centerInside"
                android:src="@drawable/support_img_rate" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_support_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/support_rate"
                android:textColor="@color/tv_gray_new"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</LinearLayout>