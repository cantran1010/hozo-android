<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_marginStart="@dimen/title_margin_left"
            android:layout_toEndOf="@id/img_back"
            android:layout_toLeftOf="@+id/img_menu"
            android:layout_toRightOf="@id/img_back"
            android:layout_toStartOf="@+id/img_menu"
            android:text="@string/make_an_offer_title" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_back_selector"
            android:contentDescription="@string/adjust_image"
            android:scaleType="centerInside"
            android:src="@drawable/more" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swpRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_footer"
        android:layout_below="@+id/layout_header">

        <ScrollView
            android:id="@+id/scv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <vn.tonish.hozo.view.WorkDetailView
                    android:id="@+id/work_detail_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <fragment
                    android:id="@+id/map"
                    android:name="vn.tonish.hozo.view.WorkAroundMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_task_map_height"
                    android:layout_marginEnd="@dimen/margin_right_screen"
                    android:layout_marginLeft="@dimen/margin_left_screen"
                    android:layout_marginRight="@dimen/margin_right_screen"
                    android:layout_marginStart="@dimen/margin_left_screen"
                    android:layout_marginTop="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/layout_bidder_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_screen"
                    android:layout_marginStart="@dimen/margin_left_screen"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bidder"
                        android:textColor="@color/tv_black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_bidder_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/hozo_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_bidders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp" />

                <LinearLayout
                    android:id="@+id/layout_assign_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_screen"
                    android:layout_marginStart="@dimen/margin_left_screen"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assign_people"
                        android:textColor="@color/tv_black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_assign_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/hozo_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_assign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left_screen"
                    android:layout_marginStart="@dimen/margin_left_screen"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/make_an_offer_question"
                        android:textColor="@color/tv_black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/hozo_bg"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <vn.tonish.hozo.view.CommentViewFull
                    android:id="@+id/comment_view_full"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_see_more_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_back_selector"
                    android:drawableEnd="@drawable/dropdown"
                    android:drawableLeft="@drawable/dropdown"
                    android:drawableRight="@drawable/dropdown"
                    android:drawableStart="@drawable/dropdown"
                    android:gravity="center"
                    android:text="@string/see_more"
                    android:textColor="@color/tv_gray"
                    android:visibility="gone" />

            </LinearLayout>


        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>


    <include
        android:id="@+id/layout_footer"
        layout="@layout/footer_coment_layout" />

</RelativeLayout>