<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <vn.tonish.hozo.view.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/avatar_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_black_new"
                android:textSize="15sp" />

        </RelativeLayout>

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_gray_new"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_attach_show"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/just_image"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="RelativeOverlap">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_time_ago"
                    style="@style/tv_style_normal_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    tools:ignore="SmallSp" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:drawableLeft="@drawable/img_dot_gray"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/img_dot_gray"
                    android:text="@string/answer"
                    android:textColor="@color/tv_gray_new"
                    android:textSize="11sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/adjust_image"
                android:paddingBottom="5dp"
                android:paddingEnd="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="1dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:src="@drawable/img_menu_comment" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>