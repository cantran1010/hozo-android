<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white">

        <vn.tonish.hozo.view.TextViewHozo
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_marginStart="@dimen/title_margin_left"
            android:text="@string/my_task_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28.5dp"
        android:layout_marginEnd="@dimen/margin_right_screen"
        android:layout_marginLeft="@dimen/margin_left_screen"
        android:layout_marginRight="@dimen/margin_right_screen"
        android:layout_marginStart="@dimen/margin_left_screen"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_worker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_task_worker_active"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/my_task_worker"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_poster"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_task_poster_default"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:text="@string/my_task_poster"
            android:textColor="@color/hozo_bg"
            android:textStyle="normal" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/layout_container_my_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>