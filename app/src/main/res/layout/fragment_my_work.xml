<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_worker"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_border_green"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/my_task_worker"
                android:textColor="@color/green"
                android:textSize="@dimen/size_xxsmall"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/layout_poster"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:maxLines="1"
                android:padding="2dp"
                android:text="@string/my_task_poster"
                android:textColor="@color/very_light_gray"
                android:textSize="@dimen/size_xxsmall"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:background="@color/gray" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/my_task_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

    </FrameLayout>


</LinearLayout>