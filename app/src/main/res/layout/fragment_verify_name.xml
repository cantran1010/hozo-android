<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="Overdraw">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:alpha="0.7"
                    android:focusable="false"
                    android:text="@string/edit_profile_name"
                    android:textColor="@color/white" />

                <vn.tonish.hozo.view.EdittextHozo
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ellipsize="end"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLines="2"
                    android:minHeight="@dimen/edt_min_height"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edt_size_nomal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:textColor="@color/white"
                            android:alpha="0.7"
                            android:id="@+id/tv_male"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/gender_male_vn" />

                        <ImageView
                            android:id="@+id/img_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/just_image"
                            android:src="@drawable/gender_male_off" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_female"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:alpha="0.7"
                            android:layout_centerVertical="true"
                            android:text="@string/gender_female_vn" />

                        <ImageView
                            android:id="@+id/img_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/just_image"
                            android:src="@drawable/gender_female_off" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.7"
                    android:text="@string/edit_profile_address"
                    android:textColor="@color/white" />

                <vn.tonish.hozo.view.EdittextHozo
                    android:id="@+id/edt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLines="1"
                    android:minHeight="@dimen/edt_min_height"
                    android:textColor="@color/white"
                    android:textSize="@dimen/edt_size_nomal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/white" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/textViewHozo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:alpha="0.7"
                    android:text="@string/edit_profile_birth"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:id="@+id/layout_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/edt_min_height"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_nomal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/just_image"
                        android:src="@drawable/calendar" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <vn.tonish.hozo.view.TextViewHozo
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:minHeight="@dimen/edt_min_height"
        android:text="@string/btn_save"
        android:background="@drawable/btn_button_selector"
        android:textColor="@color/blue"
        android:textSize="@dimen/tv_size_nomal"
        android:textStyle="bold" />

</FrameLayout>