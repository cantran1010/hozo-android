<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.tonish.hozo.activity.setting.PriceSettingActivity">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_toRightOf="@id/img_back"
            android:text="@string/tv_age" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/layout_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_header"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:weightSum="2">

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/btn_min_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_gray"
                android:drawableRight="@drawable/dropdown"
                android:gravity="center_vertical"
                android:hint="@string/hint_time_start"
                android:inputType="date"
                android:minHeight="@dimen/edt_min_height"
                android:padding="5dp"
                android:textColorHint="@color/edt_hint"
                android:textSize="@dimen/tv_size_medium" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/edt_max_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_gray"
                android:drawableRight="@drawable/dropdown"
                android:gravity="center_vertical"
                android:hint="@string/hint_time_done"
                android:inputType="number"
                android:minHeight="@dimen/edt_min_height"
                android:padding="5dp"
                android:textColorHint="@color/edt_hint"
                android:textSize="@dimen/tv_size_medium" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_price"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <vn.tonish.hozo.view.ButtonHozo
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/btn_reset"
            android:textColor="@color/red"
            android:textSize="@dimen/tv_size_nomal" />
    </android.support.v7.widget.CardView>

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/btn_save"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size_lager" />

</RelativeLayout>
