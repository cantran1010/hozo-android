<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_next"
        style="@style/btn_style_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/continue_up_case" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_next"
        android:layout_below="@+id/layout_header">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_current_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/just_image"
                android:src="@drawable/icon_map_current" />

            <ImageView
                android:id="@+id/img_map_zoom_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/just_image"
                android:src="@drawable/icon_map_zoom_out" />

            <ImageView
                android:id="@+id/img_map_zoom_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/just_image"
                android:src="@drawable/icon_map_zoom_in" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/location_layout"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/current_pin"
                tools:ignore="ContentDescription" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/content_description_back"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <RelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/img_back"
            android:layout_toLeftOf="@+id/img_pick_list"
            android:layout_toRightOf="@id/img_back"
            android:layout_toStartOf="@+id/img_pick_list">

            <AutoCompleteTextView
                android:id="@+id/autocomplete_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_border_search_map"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="40dp"
                android:paddingEnd="30dp"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                android:paddingStart="5dp"
                android:textColor="@color/tv_black"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_circle"
                android:contentDescription="@string/adjust_image"
                android:padding="0dp"
                android:src="@drawable/img_close" />

        </RelativeLayout>

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/img_back"
            android:layout_toLeftOf="@+id/img_pick_list"
            android:layout_toRightOf="@id/img_back"
            android:layout_toStartOf="@+id/img_pick_list"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/tv_black"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_pick_list"
            android:layout_width="30dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_toLeftOf="@+id/img_pick_map"
            android:layout_toStartOf="@+id/img_pick_map"
            android:paddingTop="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_list_on"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/img_pick_map"
            android:layout_width="30dp"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/ic_menu_map_off"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

    </RelativeLayout>


</RelativeLayout>