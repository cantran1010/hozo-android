<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_toRightOf="@id/img_back"
            android:text="@string/my_account" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_edit_profile" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <vn.tonish.hozo.view.ProfileView
                android:id="@+id/view_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/btn_poster"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_profile_left_selector"
                    android:gravity="center"
                    android:text="@string/profile_hire"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_xtiny" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/btn_worker"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_profile_right_selector"
                    android:gravity="center"
                    android:text="@string/profile_worker"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_xtiny" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <include layout="@layout/line" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_logout"
                    android:gravity="center"
                    android:text="@string/profile_log_out"
                    android:textColor="@color/red"
                    android:textSize="@dimen/tv_size_xlager" />
            </FrameLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>