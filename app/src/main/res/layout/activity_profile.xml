<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_toEndOf="@id/img_back"
            android:layout_toLeftOf="@+id/img_edit"
            android:layout_toRightOf="@id/img_back"
            android:layout_toStartOf="@+id/img_edit"
            android:text="@string/my_account" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_edit_profile" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <vn.tonish.hozo.view.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar_default" />


                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="17dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_xlager" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@drawable/bg_verify_profile"
                    android:gravity="center"
                    android:text="@string/profile_verifyed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_verify" />


                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_item_address"
                    android:textSize="@dimen/tv_size_xtiny" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_birthday"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_item_address"
                    android:textSize="@dimen/tv_size_xtiny" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_border_gray"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/profile_verify"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/tv_size_nomal" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_add_verify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/btn_selector"
                        android:padding="5dp"
                        android:text="@string/profile_add_verify"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_tiny" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_verify_mobile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_vr_phone" />

                    <ImageView
                        android:id="@+id/img_verify_facebook"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:alpha="0.1"
                        android:padding="5dp"
                        android:src="@drawable/ic_vr_facebook" />

                    <ImageView
                        android:id="@+id/img_verify_email"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:alpha="0.1"
                        android:padding="5dp"
                        android:src="@drawable/ic_vr_card" />

                    <ImageView
                        android:id="@+id/img_verify_card"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:alpha="0.1"
                        android:padding="5dp"
                        android:src="@drawable/ic_vr_card" />

                    <ImageView
                        android:id="@+id/img_verify_bank"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:alpha="0.1"
                        android:padding="5dp"
                        android:src="@drawable/ic_vr_card" />
                </LinearLayout>

                <include layout="@layout/line" />

                <LinearLayout
                    android:id="@+id/layout_infor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="5dp"
                        android:text="@string/profile_address"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/tv_size_nomal" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/tv_size_nomal" />

                    <include layout="@layout/line" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="5dp"
                        android:text="@string/profile_phone"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/tv_size_nomal" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:padding="5dp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_border_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@color/white"
                    android:minHeight="30dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/btn_poster"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_profile_left_selector"
                        android:gravity="center"
                        android:text="@string/profile_hire"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_xtiny" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/btn_worker"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="24dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_profile_right_selector"
                        android:gravity="center"
                        android:text="@string/profile_worker"
                        android:textColor="@color/black"
                        android:textSize="@dimen/tv_size_xtiny" />

                </LinearLayout>


                <RatingBar
                    android:id="@+id/rb_rating"
                    style="@style/StarRatingBarBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:isIndicator="true" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/profile_rate"
                    android:textColor="@color/blue" />

                <vn.tonish.hozo.view.ReviewsListView
                    android:id="@+id/rcv_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_more_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_back_selector"
                    android:drawableLeft="@drawable/dropdown"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/dropdown"
                    android:gravity="center"
                    android:minHeight="@dimen/edt_min_height"
                    android:padding="5dp"
                    android:text="@string/show_all" />

            </LinearLayout>


            <FrameLayout
                android:id="@+id/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_border_gray"
                android:visibility="gone">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/btn_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_back_selector"
                    android:drawableLeft="@drawable/ic_logout"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/profile_log_out"
                    android:textColor="@color/red"
                    android:textSize="@dimen/tv_size_xlager" />
            </FrameLayout>


        </LinearLayout>

    </ScrollView>

</FrameLayout>