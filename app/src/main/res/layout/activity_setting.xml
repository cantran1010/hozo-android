<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/hozo_bg">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_hozo_selector"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_marginStart="@dimen/title_margin_left"
            android:layout_toEndOf="@+id/img_back"
            android:layout_toLeftOf="@+id/tv_default"
            android:layout_toRightOf="@+id/img_back"
            android:layout_toStartOf="@id/tv_default"
            android:text="@string/advance_setting_title" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_default"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_hozo_selector"
            android:gravity="center"
            android:paddingEnd="16dp"
            android:paddingLeft="0dp"
            android:paddingRight="16dp"
            android:paddingStart="0dp"
            android:text="@string/btn_reset"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_xxtiny" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:orientation="vertical">

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/tv_guide_setting"
                android:textColor="@color/text_advance"
                android:textSize="@dimen/tv_size_nomal" />


            <RelativeLayout
                android:id="@+id/layout_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_back_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/status"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_status"
                    android:textColor="@color/setting_black"
                    android:textSize="@dimen/tv_size_medium" />


                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/status"
                    android:layout_toLeftOf="@+id/img_status_arrow"
                    android:layout_toRightOf="@+id/status"
                    android:layout_toStartOf="@+id/img_status_arrow"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/tv_size_nomal" />


                <ImageView
                    android:id="@+id/img_status_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/just_image"
                    android:src="@drawable/right_arrow" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text_line" />

            <include layout="@layout/sub_setting_advance_status" />

            <RelativeLayout
                android:id="@+id/layout_category"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_back_selector"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/category"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_category"
                    android:textColor="@color/setting_black"
                    android:textSize="@dimen/tv_size_medium" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/category"
                    android:layout_toLeftOf="@+id/img_category_arrow"
                    android:layout_toRightOf="@+id/category"
                    android:layout_toStartOf="@+id/img_category_arrow"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/tv_size_nomal" />

                <ImageView
                    android:id="@+id/img_category_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/just_image"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text_line" />


            <vn.tonish.hozo.view.ExpandableLayout
                android:id="@+id/category_expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/check_all_Category" />
            </vn.tonish.hozo.view.ExpandableLayout>

            <RelativeLayout
                android:id="@+id/layout_date_time"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_back_selector"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/time"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_time"
                    android:textColor="@color/setting_black"
                    android:textSize="@dimen/tv_size_medium" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/time"
                    android:layout_toLeftOf="@+id/img_time_arrow"
                    android:layout_toRightOf="@+id/time"
                    android:layout_toStartOf="@+id/img_time_arrow"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/tv_size_nomal" />

                <ImageView
                    android:id="@+id/img_time_arrow"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/just_image"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <include layout="@layout/sub_setting_advance_time" />

            <RelativeLayout
                android:id="@+id/layout_distance"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_back_selector"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/distance"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_location"
                    android:textColor="@color/setting_black"
                    android:textSize="@dimen/tv_size_medium" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/distance"
                    android:layout_toLeftOf="@+id/img_distance"
                    android:layout_toRightOf="@+id/distance"
                    android:layout_toStartOf="@+id/img_distance"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/tv_size_nomal" />

                <ImageView
                    android:id="@+id/img_distance"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/just_image"
                    android:src="@drawable/right_arrow" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <include layout="@layout/sub_setting_advance_distance" />


            <RelativeLayout
                android:id="@+id/layout_price"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_back_selector"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/price"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_price"
                    android:textColor="@color/setting_black"
                    android:textSize="@dimen/tv_size_medium" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/price"
                    android:layout_toLeftOf="@+id/img_price"
                    android:layout_toRightOf="@+id/price"
                    android:layout_toStartOf="@+id/img_price"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/tv_size_nomal" />

                <ImageView
                    android:id="@+id/img_price"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/just_image"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <include layout="@layout/sub_setting_advance_price" />

            <RelativeLayout
                android:id="@+id/layout_keyword"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_back_selector"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/key_word"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_key_word"
                    android:textColor="@color/setting_black"
                    android:textSize="@dimen/tv_size_medium" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_keyword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/key_word"
                    android:layout_toLeftOf="@+id/img_keyword"
                    android:layout_toRightOf="@+id/key_word"
                    android:layout_toStartOf="@+id/img_keyword"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:textSize="@dimen/tv_size_nomal" />


                <ImageView
                    android:id="@+id/img_keyword"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/just_image"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <include layout="@layout/sub_setting_advance_keyword" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>