<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/hozo_bg">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_marginStart="@dimen/title_margin_left"
            android:layout_toEndOf="@+id/img_close"
            android:layout_toLeftOf="@+id/tv_save"
            android:layout_toRightOf="@+id/img_close"
            android:layout_toStartOf="@+id/tv_save"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:text="@string/select_task_title" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/button_selector"
            android:contentDescription="@string/content_description_back"
            android:scaleType="centerInside"
            android:src="@drawable/img_close" />

        <ImageView
            android:src="@drawable/ic_save"
            android:id="@+id/tv_save"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector"
            android:contentDescription="@string/adjust_image"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_selector"
            android:contentDescription="@string/adjust_image"
            android:scaleType="centerInside"
            android:src="@drawable/menu_other"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_next"
        android:layout_below="@+id/layout_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/label_title"
                    style="@style/tv_style_normal_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_title_msg"
                    android:layout_toStartOf="@+id/tv_title_msg"
                    android:text="@string/tv_task_title" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_title_msg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/label_title"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:textSize="9sp" />

            </RelativeLayout>

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_task_name"
                style="@style/edt_create_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:inputType="textCapSentences"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3.75"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_style_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/timer"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_calendar"
                        android:text="@string/tv_date_task" />


                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_date"
                        style="@style/edt_create_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:focusable="false"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_style_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/timer"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_timer"
                        android:text="@string/tv_time_task" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_time"
                        style="@style/edt_create_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_style_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/history"
                        android:drawablePadding="5dp"
                        android:drawableStart="@drawable/ic_history"
                        android:text="@string/tv_time_task_lbl" />


                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_working_hour"
                        style="@style/edt_create_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:gravity="center"
                        android:text="4" />

                </LinearLayout>

            </LinearLayout>

            <vn.tonish.hozo.view.TextViewHozo
                style="@style/tv_style_normal_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_location_point"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_location_point"
                android:text="@string/location" />

            <AutoCompleteTextView
                android:id="@+id/autocomplete_places"
                style="@style/edt_create_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/address_hint"
                android:minHeight="@dimen/edt_min_height" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3.75"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_style_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_money"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_money"
                        android:text="@string/lable_wage" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <vn.tonish.hozo.view.HozoAutoCompleteTextView
                            android:id="@+id/edt_budget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/selector_edittext"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="11"
                            android:padding="10dp"
                            android:textColor="@color/color_edt_create_task_lable"
                            android:textSize="@dimen/tv_size_xxtiny"
                            android:textStyle="normal" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="đ"
                            android:textColor="@color/color_edt_create_task_lable"
                            android:textSize="@dimen/tv_size_xxtiny"
                            android:textStyle="normal" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_style_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_person"
                        android:text="@string/number_worker" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_number_worker"
                        style="@style/edt_create_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.TextViewHozo
                        style="@style/tv_style_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_money"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_money"
                        android:text="@string/all_price" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_total_price"
                            style="@style/edt_create_task"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:paddingEnd="20dp"
                            android:paddingRight="20dp"
                            android:text="0" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp"
                            android:text="đ"
                            android:textColor="@color/color_edt_create_task_lable"
                            android:textSize="@dimen/tv_size_xxtiny"
                            android:textStyle="normal" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/label_dis"
                    style="@style/tv_style_normal_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_des_msg"
                    android:layout_toStartOf="@+id/tv_des_msg"
                    android:text="@string/task_description_hint" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_des_msg"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/label_dis"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:textColor="@color/color_create_task_lable"
                    android:textSize="9sp" />

            </RelativeLayout>

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_description"
                style="@style/edt_create_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="top"
                android:inputType="text"
                android:minHeight="60dp"
                android:scrollbars="vertical" />

            <include layout="@layout/create_task_more" />

        </LinearLayout>
    </ScrollView>

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_next"
        style="@style/btn_style_hozo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="@string/btn_create_task"
        android:textAllCaps="false" />

</RelativeLayout>