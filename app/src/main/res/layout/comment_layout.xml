<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.TextViewHozo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:textColor="@color/tv_gray_new"
            android:textStyle="bold" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_bidder_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_count_bidder"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:text="5"
            android:textColor="#d23176"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <vn.tonish.hozo.view.TextViewHozo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_des"
            android:textColor="@color/tv_gray_new" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <vn.tonish.hozo.view.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border_gray_corners"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/img_layout"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginStart="50dp"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img_attached"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/adjust_image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avatar_default" />

                        <ImageView
                            android:id="@+id/img_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="#66000000"
                            android:contentDescription="@string/adjust_image"
                            android:padding="5dp"
                            android:src="@drawable/img_close" />

                    </RelativeLayout>

                    <vn.tonish.hozo.view.EdittextHozo
                        android:id="@+id/edt_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/img_send"
                        android:layout_toStartOf="@id/img_send"
                        android:background="@null"
                        android:hint="@string/type_your_text"
                        android:inputType="textCapSentences"
                        android:minHeight="@dimen/edt_min_height"
                        android:paddingBottom="5dp"
                        android:paddingEnd="0dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="0dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:textColorHint="@color/tv_gray" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_photo_camera"
                        android:drawablePadding="5dp"
                        android:text="@string/attach_image_des" />

                    <vn.tonish.hozo.view.ButtonHozo
                        style="@style/btn_style_corners_new"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/send"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <vn.tonish.hozo.view.TextViewHozo
        android:id="@+id/tv_see_more_bidders"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_gray_corners"
        android:gravity="center"
        android:text="@string/see_all_comment"
        android:textColor="@color/tv_gray_new"
        android:textStyle="bold" />

</LinearLayout>
