<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <ImageView
            android:id="@+id/img_close"
            style="@style/tv_title_cancel"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@drawable/btn_back_selector"
            android:scaleType="centerInside"
            android:src="@drawable/img_close_red" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tv_post_a_task_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_next"
        android:layout_below="@id/layout_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <vn.tonish.hozo.view.TextViewHozo
                style="@style/tv_style_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/tv_task_title" />

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_task_name"
                style="@style/edt_style_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray"
                android:hint="@string/task_title_hint"
                android:minHeight="@dimen/edt_min_height"
                android:padding="5dp" />

            <vn.tonish.hozo.view.TextViewHozo
                style="@style/tv_style_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/tv_time_task" />

            <RelativeLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_gray"
                android:minHeight="@dimen/edt_min_height">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_date"
                    style="@style/spinner_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/date_pick_hint"
                    android:padding="5dp"
                    android:textColor="@color/tv_black"
                    android:textColorHint="@color/tv_gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/drop_down"
                    android:src="@drawable/dropdown" />

            </RelativeLayout>

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_working_hour"
                style="@style/edt_style_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray"
                android:hint="@string/post_a_task_working_hour_hint"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:minHeight="@dimen/edt_min_height"
                android:padding="5dp" />

            <vn.tonish.hozo.view.TextViewHozo
                style="@style/tv_style_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/task_description_hint" />

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_description"
                style="@style/edt_style_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray"
                android:gravity="top"
                android:minHeight="80dp"
                android:padding="5dp"
                android:scrollbars="vertical" />

            <vn.tonish.hozo.view.TextViewHozo
                style="@style/tv_style_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/attach_image_hint" />

            <vn.tonish.hozo.view.MyGridView
                android:id="@+id/gr_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numColumns="4" />

            <vn.tonish.hozo.view.TextViewHozo
                style="@style/tv_style_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/more_detail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_gender"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray"
                    android:entries="@array/gender"
                    android:minHeight="@dimen/edt_min_height" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_age"
                    style="@style/tv_style_normal_black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/border_gray"
                    android:gravity="center"
                    android:hint="@string/age_from_hint"
                    android:minHeight="@dimen/edt_min_height" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_next"
        style="@style/btn_style_nomal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_next"
        android:textColor="@color/white" />

</RelativeLayout>
