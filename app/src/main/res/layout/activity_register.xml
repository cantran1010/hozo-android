<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/btn_back_selector"
        android:contentDescription="@string/img_content_des"
        android:scaleType="centerInside"
        android:src="@drawable/img_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="40dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingStart="40dp">

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:padding="10dp">

                <vn.tonish.hozo.view.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/avatar_default" />

                <ImageView
                    android:id="@+id/img_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/camera"
                    android:padding="10dp"
                    android:src="@drawable/camera" />

            </RelativeLayout>

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:focusable="false"
                android:text="@string/edit_profile_name" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <vn.tonish.hozo.view.EdittextHozo
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:inputType="textPersonName|textCapWords"
                    android:maxLength="50"
                    android:minHeight="@dimen/edt_min_height"
                    android:paddingEnd="30dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="30dp"
                    android:paddingStart="0dp"
                    android:textSize="@dimen/tv_size_xmedium"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_clear"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/adjust_image"
                    android:padding="10dp"
                    android:src="@drawable/ic_clear"
                    android:visibility="gone" />

            </RelativeLayout>

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:focusable="false"
                android:text="@string/register_address" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/autocomplete_places"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:minHeight="@dimen/edt_min_height"
                    android:paddingEnd="30dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="30dp"
                    android:paddingStart="0dp"
                    android:textSize="@dimen/tv_size_xmedium" />

                <ImageView
                    android:id="@+id/img_clear_google"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/adjust_image"
                    android:padding="10dp"
                    android:src="@drawable/ic_clear"
                    android:visibility="gone" />

            </RelativeLayout>

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@string/tv_login_policy"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_xtiny" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_selector"
                android:gravity="center"
                android:text="@string/btn_done"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_nomal"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
