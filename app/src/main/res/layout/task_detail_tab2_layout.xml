<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_assign_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/img_dot"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/img_dot"
            android:gravity="center"
            android:text="@string/assign_people"
            android:textColor="@color/tv_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_assign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_see_more_assigns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/dropdown"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/dropdown"
            android:gravity="center"
            android:minHeight="@dimen/edt_min_height"
            android:padding="5dp"
            android:text="@string/see_more"
            android:textColor="@color/hozo_bg"
            android:visibility="visible" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_bidder_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/img_dot"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/img_dot"
            android:gravity="center"
            android:text="@string/bidder"
            android:textColor="@color/tv_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_bidders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_see_more_bidders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/dropdown"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/dropdown"
            android:gravity="center"
            android:minHeight="@dimen/edt_min_height"
            android:padding="5dp"
            android:text="@string/see_more"
            android:textColor="@color/hozo_bg"
            android:visibility="visible" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_no_bidder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/no_bidder"
            android:textColor="@color/hozo_bg"
            android:textSize="20sp" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>