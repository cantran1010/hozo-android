<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/background_bar">

        <FrameLayout
            android:id="@+id/browse_task_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/share_task"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_size_title" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="125dp"
                android:padding="16dp"
                android:src="@drawable/search"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="65dp"
                android:padding="17dp"
                android:src="@drawable/location"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/img_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="17dp"
                android:src="@drawable/controls" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fr_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="16dp"
                android:src="@drawable/ic_back_blue" />

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="25dp"
                android:background="@null"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_clear"
                android:drawableStart="@drawable/search"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/blue"
                android:textColorHint="@color/text_hint"
                tools:ignore="RtlCompat" />

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="16dp"
                android:background="@color/blue"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="15dp"
                android:src="@drawable/ic_clear"
                android:visibility="gone" />

        </FrameLayout>

    </FrameLayout>

    <vn.tonish.hozo.view.TextViewHozo
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_mytask_filter"
        android:drawableEnd="@drawable/drop_spinner"
        android:drawableStart="@drawable/filter"
        android:gravity="center"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:text="@string/tv_type_of_task"
        tools:ignore="RtlCompat" />

    <FrameLayout
        android:id="@+id/find_task_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>