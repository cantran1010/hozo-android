<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/browse_task_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="@string/share_task"
                android:textColor="@color/blue"
                android:textSize="@dimen/tv_size_title"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/img_location"
                android:background="@drawable/btn_back_selector"
                android:padding="16dp"
                android:src="@drawable/search" />

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/img_controls"
                android:background="@drawable/btn_back_selector"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/location" />

            <ImageView
                android:id="@+id/img_controls"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_back_selector"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/controls" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fr_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back_selector"
                android:contentDescription="@string/content_description_back"
                android:scaleType="centerInside"
                android:src="@drawable/img_back" />

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_back"
                android:background="@drawable/bg_edittext_search"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/search"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:paddingRight="30dp"
                tools:ignore="RtlCompat" />


            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:padding="10dp"
                android:src="@android:drawable/presence_offline"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/gray" />

        </RelativeLayout>


    </FrameLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swpRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lv_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>