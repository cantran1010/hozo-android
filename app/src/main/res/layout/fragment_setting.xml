<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/hozo_bg">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_marginStart="@dimen/title_margin_left"
            android:text="@string/other_title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/setting_profile"
                    tools:ignore="ContentDescription" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:text="@string/other_profile"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_setting_title" />

                <include layout="@layout/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:background="@color/text_line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_payment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/setting_payment"
                    tools:ignore="ContentDescription" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:text="@string/other_payment"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_setting_title" />

                <include layout="@layout/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:background="@color/text_line" />

            </RelativeLayout>

            <!-- Se lam o version sau-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_back_selector"
                android:visibility="gone">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/setting_connect"
                    tools:ignore="ContentDescription" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:text="@string/other_connect"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_setting_title" />

                <include layout="@layout/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:background="@color/text_line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_support"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/setting_support"
                    tools:ignore="ContentDescription" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:text="@string/other_support"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_setting_title" />

                <include layout="@layout/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:background="@color/text_line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_share"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/setting_share"
                    tools:ignore="ContentDescription" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:text="@string/other_share"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_setting_title" />

                <include layout="@layout/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:background="@color/text_line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_condition"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/setting_policy"
                    tools:ignore="ContentDescription" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:text="@string/other_condition"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_setting_title" />

                <include layout="@layout/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:background="@color/text_line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_nda"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/setting_privacy"
                    tools:ignore="ContentDescription" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:text="@string/other_nad"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_setting_title" />

                <include layout="@layout/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:background="@color/text_line" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackground"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/setting_about"
                    tools:ignore="ContentDescription" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:text="@string/other_about"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_setting_title" />

                <include layout="@layout/arrow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/setting_margin_left"
                    android:layout_marginStart="@dimen/setting_margin_left"
                    android:background="@color/text_line" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f3f3f3" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="25dp"
                android:textColor="#696969"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>