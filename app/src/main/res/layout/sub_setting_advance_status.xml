<?xml version="1.0" encoding="utf-8"?>
<vn.tonish.hozo.view.ExpandableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_expandable_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <RadioGroup
        android:id="@+id/radio_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_status_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_button_background"
            android:checked="true"
            android:padding="5dp"
            android:shadowColor="@color/hozo_bg"
            android:text="@string/hozo_all" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_status_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:button="@drawable/radio_button_background"
            android:checked="false"
            android:padding="5dp"
            android:text="@string/make_an_offer_status" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/rd_status_assign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:button="@drawable/radio_button_background"
            android:checked="false"
            android:padding="5dp"
            android:text="@string/delivered" />

    </RadioGroup>
</vn.tonish.hozo.view.ExpandableLayout>