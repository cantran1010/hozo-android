<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/avatar_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/content_description_verify"
                    android:src="@drawable/img_verified" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/rb_rate"
                style="@style/StarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:rating="2" />

            <include layout="@layout/verify_layout" />

            <vn.tonish.hozo.view.ButtonHozo
                android:id="@+id/btn_call_rate"
                style="@style/btn_style_corners"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/call" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:maxWidth="280dp"
            android:textColor="@color/tv_black"
            android:textSize="20sp" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/tv_title"
            android:layout_toRightOf="@id/tv_title"
            android:background="@drawable/bg_border_recruitment"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:text="@string/recruitment"
            android:textColor="@color/white" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_gray" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_work_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_gray" />

    </LinearLayout>

    <vn.tonish.hozo.view.TextViewHozo
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tv_black" />

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_selector"
        android:text="@string/work_detail_view_bit"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.TextViewHozo
            style="@style/tv_style_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_detail_view_price"
            android:textColor="@color/tv_black"
            android:textStyle="bold" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_price"
            style="@style/tv_style_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.TextViewHozo
            style="@style/tv_style_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_detail_view_date"
            android:textColor="@color/tv_black"
            android:textStyle="bold" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_date"
            style="@style/tv_style_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.TextViewHozo
            style="@style/tv_style_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_detail_view_time"
            android:textColor="@color/tv_black"
            android:textStyle="bold" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_time"
            style="@style/tv_style_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.TextViewHozo
            style="@style/tv_style_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/work_detail_view_address"
            android:textColor="@color/tv_black"
            android:textStyle="bold" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_address"
            style="@style/tv_style_normal_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

    </LinearLayout>

</LinearLayout>
