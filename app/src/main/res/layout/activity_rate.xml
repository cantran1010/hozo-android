<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hozo_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:gravity="center"
                android:text="@string/rate_title"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <vn.tonish.hozo.view.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/just_image"
                android:src="@drawable/avatar_default" />

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ratingbar_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp">

                <RatingBar
                    android:id="@+id/rb_rate"
                    style="@style/StarRatingBarBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5" />

            </RelativeLayout>

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_content"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginEnd="@dimen/margin_right_screen"
                android:layout_marginLeft="@dimen/margin_left_screen"
                android:layout_marginRight="@dimen/margin_right_screen"
                android:layout_marginStart="@dimen/margin_left_screen"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_border_edt"
                android:gravity="top"
                android:hint="@string/rate_content_hint"
                android:padding="5dp"
                android:scrollbars="vertical" />

        </LinearLayout>

    </ScrollView>

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_rate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_back_selector"
        android:gravity="center"
        android:text="@string/rate_submit"
        android:textColor="@color/hozo_bg"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
