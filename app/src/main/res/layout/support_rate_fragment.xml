<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:gravity="end"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/just_image"
            android:src="@drawable/img_support_tab_focus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e8f0f0"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/rb_rate"
            style="@style/StarRatingBarSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:numStars="5"
            android:rating="1.0"
            android:stepSize="1" />

        <vn.tonish.hozo.view.EdittextHozo
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableEnd="@drawable/edit"
            android:drawableRight="@drawable/edit"
            android:hint="@string/support_rate_hint"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/tv_gray_new"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#c8d6da" />

        <vn.tonish.hozo.view.ButtonHozo
            android:id="@+id/btn_send"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_new_selector"
            android:text="@string/btn_support_rate"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8f0f0"
        android:gravity="center"
        android:paddingBottom="10dp">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_go_play_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/google_store"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/google_store"
            android:gravity="center"
            android:text="@string/rate_on_play_store"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>