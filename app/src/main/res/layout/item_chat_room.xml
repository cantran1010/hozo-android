<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/avatar_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_time_ago"
                    android:layout_toStartOf="@+id/tv_time_ago"
                    android:drawableLeft="@drawable/img_message_unread"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/img_message_unread"
                    android:gravity="top"
                    android:text="Don nha"
                    android:textColor="@color/tv_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/timer_gray"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/timer_gray"
                    android:gravity="center"
                    android:textColor="@color/tv_gray"
                    android:textSize="12sp"
                    android:textStyle="italic" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/date_work"
                    android:textColor="@color/tv_black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="28/03/1988"
                    android:textColor="@color/tv_black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_last_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="bao gio lam day"
                android:textColor="@color/tv_black"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray" />

</LinearLayout>