<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/avatar_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_time_ago"
                    android:layout_toStartOf="@+id/tv_time_ago"
                    android:drawableLeft="@drawable/img_message_read"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/img_message_read"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:maxLines="1"
                    android:textColor="@color/tv_black_new"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:drawableLeft="@drawable/timer_gray"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/timer_gray"
                    android:gravity="center"
                    android:textColor="@color/tv_gray"
                    android:textSize="@dimen/tv_size_tiny"
                    android:textStyle="normal"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/date_work"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_size_xxtiny"
                    android:textStyle="normal" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/setting_text"
                    android:textSize="@dimen/tv_size_xxtiny"
                    android:textStyle="normal" />

            </LinearLayout>

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_last_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/setting_text"
                android:textSize="@dimen/tv_size_xxtiny"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/gray" />

</FrameLayout>