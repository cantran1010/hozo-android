<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_right_screen"
        android:layout_marginLeft="@dimen/margin_left_screen"
        android:layout_marginRight="@dimen/margin_right_screen"
        android:layout_marginStart="@dimen/margin_left_screen"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <vn.tonish.hozo.view.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/avatar_width_height"
            android:layout_height="@dimen/avatar_width_height"
            android:layout_gravity="center_vertical"
            android:src="@drawable/avatar_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/img_avatar"
            android:layout_toLeftOf="@+id/tv_time_ago"
            android:layout_toRightOf="@id/img_avatar"
            android:layout_toStartOf="@+id/tv_time_ago"
            android:orientation="vertical">

            <vn.tonish.hozo.view.TextViewHozo
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rb_rate"
                style="@style/StarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="2dp"
                android:isIndicator="true"
                android:stepSize="0.01" />

        </LinearLayout>

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_toLeftOf="@+id/btn_assign"
            android:layout_toStartOf="@+id/btn_assign"
            android:drawableLeft="@drawable/img_timer"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/img_timer"
            android:gravity="center"
            android:textColor="@color/tv_gray"
            android:textSize="12sp"
            android:textStyle="italic" />

        <vn.tonish.hozo.view.ButtonHozo
            android:id="@+id/btn_assign"
            style="@style/btn_style_corners"
            android:layout_width="75dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:text="@string/assign"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/margin_right_screen"
        android:layout_marginLeft="@dimen/margin_left_screen"
        android:layout_marginRight="@dimen/margin_right_screen"
        android:layout_marginStart="@dimen/margin_left_screen"
        android:layout_marginTop="10dp"
        android:background="@color/white" />

</LinearLayout>