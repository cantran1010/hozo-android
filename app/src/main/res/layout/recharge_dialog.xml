<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/alert_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <vn.tonish.hozo.view.TextViewHozo
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/notification_title"
            android:textColor="@color/tv_black_new"
            android:textSize="21sp"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/img_close_red"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/border_gray" />

    <vn.tonish.hozo.view.TextViewHozo
        android:id="@+id/tv_recharge_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/recharge_content"
        android:textColor="@color/tv_gray"
        android:textSize="16sp" />

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_wallet"
        style="@style/btn_style_hozo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_recharge_wallet" />

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_collaborators"
        style="@style/btn_style_hozo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/btn_rechager_collaborators" />

</LinearLayout>