<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_back" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_marginStart="@dimen/title_margin_left"
            android:layout_toEndOf="@id/img_back"
            android:layout_toLeftOf="@+id/tv_reset"
            android:layout_toRightOf="@id/img_back"
            android:layout_toStartOf="@+id/tv_reset"
            android:text="@string/post_a_task_finish_title" />

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_back_selector"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/btn_reset"
            android:textColor="@color/hozo_red"
            android:textSize="@dimen/tv_size_lager"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_done"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_min"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray">

                <vn.tonish.hozo.view.EdittextHozo
                    android:id="@+id/edt_min_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_unit"
                    android:layout_toStartOf="@+id/tv_unit"
                    android:background="@null"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="13"
                    android:minHeight="@dimen/edt_min_height"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:text="@string/vn_dong"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RelativeLayout>

            <vn.tonish.hozo.view.TextViewHozo
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/edt_max"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray">

                <vn.tonish.hozo.view.EdittextHozo
                    android:id="@+id/edt_max_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_unit2"
                    android:layout_toStartOf="@+id/tv_unit2"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="13"
                    android:minHeight="@dimen/edt_min_height"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_unit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:text="@string/vn_dong"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RelativeLayout>


        </LinearLayout>

        <vn.tonish.hozo.view.ButtonHozo
            android:id="@+id/btn_done"
            style="@style/btn_style_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/btn_save" />

    </RelativeLayout>

</LinearLayout>