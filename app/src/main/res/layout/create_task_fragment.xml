<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <vn.tonish.hozo.view.TextViewHozo
            android:id="@+id/tv_title"
            style="@style/tv_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/tv_post_a_task_title" />

        <ImageView
            android:id="@+id/img_close"
            style="@style/tv_title_cancel"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_back_selector"
            android:contentDescription="@string/content_description_back"
            android:scaleType="centerInside"
            android:src="@drawable/img_close_red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_next"
        android:layout_below="@id/layout_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <vn.tonish.hozo.view.TextViewHozo
                style="@style/tv_style_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/tv_category_title"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/tv_title"
                android:layout_toRightOf="@id/tv_title"
                android:background="@drawable/border_gray">

                <Spinner
                    android:id="@+id/sp_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/drop_down"
                    android:src="@drawable/dropdown" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <vn.tonish.hozo.view.TextViewHozo
                    style="@style/tv_style_normal_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_task_title"
                    android:textStyle="bold" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_title_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red" />

            </RelativeLayout>

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_task_name"
                style="@style/edt_style_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray"
                android:hint="@string/task_title_hint"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:minHeight="@dimen/edt_min_height"
                android:nextFocusDown="@+id/edt_working_hour"
                android:padding="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <vn.tonish.hozo.view.TextViewHozo
                    style="@style/tv_style_normal_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_description_hint"
                    android:textStyle="bold" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_des_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red" />

            </RelativeLayout>

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_description"
                style="@style/edt_style_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray"
                android:gravity="top"
                android:inputType="textCapSentences|textMultiLine"
                android:minHeight="80dp"
                android:padding="5dp"
                android:scrollbars="vertical" />

            <vn.tonish.hozo.view.TextViewHozo
                style="@style/tv_style_normal_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/tv_time_task"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_gray"
                android:minHeight="@dimen/edt_min_height">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_date"
                    style="@style/spinner_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginRight="25dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/date_pick_hint"
                    android:padding="5dp"
                    android:textColor="@color/tv_black"
                    android:textColorHint="@color/tv_gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:contentDescription="@string/drop_down"
                    android:src="@drawable/dropdown" />

            </RelativeLayout>

            <vn.tonish.hozo.view.EdittextHozo
                android:id="@+id/edt_working_hour"
                style="@style/edt_style_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray"
                android:hint="@string/post_a_task_working_hour_hint"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:minHeight="@dimen/edt_min_height"
                android:padding="5dp" />

            <AutoCompleteTextView
                android:id="@+id/autocomplete_places"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_gray"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/address_hint"
                android:inputType="text"
                android:maxLines="1"
                android:minHeight="40dp"
                android:textColor="@color/tv_black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.tonish.hozo.view.EdittextHozo
                    android:id="@+id/edt_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray" />

                <vn.tonish.hozo.view.EdittextHozo
                    android:id="@+id/edt_number_worker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_total_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_gray" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_next"
        style="@style/btn_style_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_next" />

</RelativeLayout>