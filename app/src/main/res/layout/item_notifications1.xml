<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <vn.tonish.hozo.customview.RoundedImageView
        android:id="@+id/img_notification_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_notification_title"
            android:textColor="@color/black"
            android:textSize="@dimen/size_xsmall"
            android:singleLine="true"
            android:text="@string/notification_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_notification_content"
            android:singleLine="true"
            android:textSize="@dimen/size_small"
            android:text="@string/notification_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_notification_time1"
            android:textStyle="italic"
            android:singleLine="true"
            android:textSize="@dimen/size_small"
            android:text="@string/notification_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
