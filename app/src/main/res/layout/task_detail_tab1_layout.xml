<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_bid"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left_screen"
            android:layout_marginRight="@dimen/margin_right_screen"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/status_layout"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.CircleImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/avatar_default" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Bui Duc Long"
                            android:textColor="@color/tv_black"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/rb_rate"
                            style="@style/StarRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-7dp"
                            android:layout_marginTop="2dp"
                            android:isIndicator="true"
                            android:stepSize="0.01" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/status_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_status"
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="Dang tuyen"
                        android:textColor="@color/white" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_time_ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 hour ago" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_left_screen"
                android:paddingRight="@dimen/margin_right_screen">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Don nha"
                    android:textColor="@color/hozo_bg"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/location_create_task"
                        android:drawablePadding="10dp"
                        android:text="@string/address_title" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ha noi"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/calendar_task_detail"
                            android:drawablePadding="10dp"
                            android:text="@string/task_date"
                            android:textColor="@color/tv_gray" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="21/07/2000"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/timer"
                            android:drawablePadding="10dp"
                            android:text="@string/task_time"
                            android:textColor="@color/tv_gray" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="9h 30"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/history"
                            android:drawablePadding="10dp"
                            android:text="@string/task_hour"
                            android:textColor="@color/tv_gray" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="3"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/description"
                    android:textColor="@color/gray" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="abc adfs fá fdas fdsa fasd f \n fkdasklfjdsakljfkjadsklfj"
                    android:textColor="@color/tv_black" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:drawableRight="@drawable/down"
                    android:text="@string/see_more"
                    android:textColor="@color/hozo_bg" />

                <LinearLayout
                    android:id="@+id/layout_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <vn.tonish.hozo.view.MyGridView
                        android:id="@+id/gr_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:numColumns="3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <vn.tonish.hozo.view.TextViewHozo
                            style="@style/tv_style_normal_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/age_create_task"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/age_create_task"
                            android:text="@string/age" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_age"
                            style="@style/tv_style_normal_black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="@string/age_from_hint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <vn.tonish.hozo.view.TextViewHozo
                            style="@style/tv_style_normal_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/sex"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/sex"
                            android:text="@string/sex" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_sex"
                            style="@style/tv_style_normal_black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="Nam" />

                    </LinearLayout>

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_see_more_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="10dp"
                        android:drawableRight="@drawable/up"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:text="@string/advance_more_hide"
                        android:textColor="@color/hozo_bg" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/budget_detail"
                    android:textColor="@color/tv_black" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="100000 đ"
                    android:textColor="@color/green"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_worker_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/hozo_bg"
                            android:textSize="22sp" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/worker_need"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_assigner_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/hozo_bg"
                            android:textSize="22sp" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/assiger_count"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_empty_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/hozo_bg"
                            android:textSize="22sp" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_count"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_bid"
        style="@style/btn_style_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_left_screen"
        android:layout_marginRight="@dimen/margin_right_screen"
        android:text="@string/work_detail_view_bit" />
</RelativeLayout>
