<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_bid"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_right_screen"
            android:layout_marginLeft="@dimen/margin_left_screen"
            android:layout_marginRight="@dimen/margin_right_screen"
            android:layout_marginStart="@dimen/margin_left_screen"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/status_layout"
                    android:layout_toStartOf="@+id/status_layout"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.CircleImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/avatar_default" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:textColor="@color/tv_black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/rb_rate"
                            style="@style/StarRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-7dp"
                            android:layout_marginTop="4dp"
                            android:isIndicator="true"
                            android:stepSize="0.01" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/status_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/status_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <ProgressBar
                            android:id="@+id/simpleProgressBar"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="82dp"
                            android:layout_height="23dp"
                            android:max="1"
                            android:progress="1"
                            android:progressDrawable="@drawable/custom_progress" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_status"
                            android:layout_width="82dp"
                            android:layout_height="23dp"
                            android:background="@drawable/bg_border_recruitment"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_time_ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/img_dot_time_ago"
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/img_dot_time_ago" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_border"
                android:orientation="vertical"
                android:paddingEnd="@dimen/margin_right_screen"
                android:paddingLeft="@dimen/margin_left_screen"
                android:paddingRight="@dimen/margin_right_screen"
                android:paddingStart="@dimen/margin_left_screen">

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/hozo_bg"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/location_create_task"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/location_create_task"
                        android:text="@string/address_title" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/calendar_task_detail"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/calendar_task_detail"
                            android:gravity="center"
                            android:text="@string/task_date"
                            android:textColor="@color/tv_gray" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/timer"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/timer"
                            android:text="@string/task_time"
                            android:textColor="@color/tv_gray" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/history"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/history"
                            android:text="@string/task_hour"
                            android:textColor="@color/tv_gray" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/description"
                    android:textColor="@color/gray" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/tv_black" />

                <vn.tonish.hozo.view.MyGridView
                    android:id="@+id/gr_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:numColumns="3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_age_lbl"
                        style="@style/tv_style_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/age_create_task"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/age_create_task"
                        android:text="@string/age" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_age"
                        style="@style/tv_style_normal_black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:text="@string/age_from_hint" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_sex_lbl"
                        style="@style/tv_style_normal_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sex"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/sex"
                        android:text="@string/sex" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_sex"
                        style="@style/tv_style_normal_black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_white_border"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <vn.tonish.hozo.view.TextViewHozo
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/money"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/money"
                    android:text="@string/budget_detail"
                    android:textColor="@color/tv_black" />

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/green"
                    android:textSize="28sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_worker_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hozo_bg"
                            android:textSize="22sp" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/worker_need"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_assigner_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hozo_bg"
                            android:textSize="22sp" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/assiger_count"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_empty_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/hozo_bg"
                            android:textSize="22sp" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/empty_count"
                            android:textColor="@color/tv_black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <vn.tonish.hozo.view.ButtonHozo
        android:id="@+id/btn_bid"
        style="@style/btn_style_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="@dimen/margin_right_screen"
        android:layout_marginLeft="@dimen/margin_left_screen"
        android:layout_marginRight="@dimen/margin_right_screen"
        android:layout_marginStart="@dimen/margin_left_screen"
        android:text="@string/work_detail_view_bit" />

</RelativeLayout>
