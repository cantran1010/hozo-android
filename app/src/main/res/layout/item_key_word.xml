<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:focusable="true">

    <vn.tonish.hozo.view.TextViewHozo
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toLeftOf="@+id/ic_close"
        android:layout_toStartOf="@+id/ic_close"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:inputType="text"
        android:maxLines="2"
        android:minHeight="@dimen/edt_min_height"
        android:textColor="@color/text_advance" />

    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_back_selector"
        android:contentDescription="@string/just_image"
        android:padding="12dp"
        android:src="@drawable/ic_clear_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/text_line" />

</RelativeLayout>