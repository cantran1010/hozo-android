<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/hozo_bg">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_selector_new"
            android:contentDescription="@string/content_description_back"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_arrow" />

        <vn.tonish.hozo.view.TextViewHozo
            style="@style/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_margin_left"
            android:layout_marginStart="@dimen/title_margin_left"
            android:layout_toEndOf="@id/img_back"
            android:layout_toLeftOf="@+id/img_edit"
            android:layout_toRightOf="@id/img_back"
            android:layout_toStartOf="@+id/img_edit"
            android:text="@string/detail_task_header" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_back_selector_new"
            android:contentDescription="@string/adjust_image"
            android:scaleType="centerInside"
            android:src="@drawable/more_menu" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left_screen"
                android:layout_marginRight="@dimen/margin_right_screen"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/status_layout"
                        android:layout_toStartOf="@+id/status_layout"
                        android:orientation="horizontal">

                        <vn.tonish.hozo.view.CircleImageView
                            android:id="@+id/img_avatar"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/avatar_default" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:text="Bui Duc Long"
                                android:textColor="@color/tv_black_new"
                                android:textSize="15sp" />

                            <RatingBar
                                android:id="@+id/rb_rate"
                                style="@style/StarRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/status_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ProgressBar
                                android:id="@+id/simpleProgressBar"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="82dp"
                                android:layout_height="23dp"
                                android:max="1"
                                android:progress="1"
                                android:progressDrawable="@drawable/custom_progress" />

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_status"
                                android:layout_width="82dp"
                                android:layout_height="23dp"
                                android:background="@drawable/bg_border_recruitment"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_time_ago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="2dp"
                            android:text="10 phut truoc"
                            android:textColor="@color/tv_gray_new" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"
                    android:background="#bcccd2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white_border"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Don nha ABC"
                        android:textColor="@color/hozo_bg"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/location_create_task"
                            android:drawablePadding="10dp"
                            android:drawableStart="@drawable/detail_address"
                            android:text="@string/address_title"
                            android:textColor="@color/tv_gray_title" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginStart="2dp"
                            android:text="Ha Noi"
                            android:textColor="@color/tv_gray_new" />

                    </LinearLayout>

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/view_map"
                        android:textColor="@color/hozo_bg"
                        android:textSize="11sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="5dp"
                        android:background="#bcccd2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <vn.tonish.hozo.view.TextViewHozo
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/detail_date"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/detail_date"
                                android:gravity="center"
                                android:text="@string/task_date"
                                android:textColor="@color/tv_gray_title"
                                android:textSize="12sp" />

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="28/03/1988"
                                android:textColor="@color/tv_gray_new"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="#bcccd2" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <vn.tonish.hozo.view.TextViewHozo
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/detail_start_time"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/detail_start_time"
                                android:text="@string/task_time"
                                android:textColor="@color/tv_gray_title"
                                android:textSize="12sp" />

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="18:00"
                                android:textColor="@color/tv_gray_new"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/gray" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <vn.tonish.hozo.view.TextViewHozo
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/detail_hours"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/detail_hours"
                                android:text="@string/task_hour"
                                android:textColor="@color/tv_gray_title"
                                android:textSize="12sp" />

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_hour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="5"
                                android:textColor="@color/tv_gray_new"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="#bcccd2" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/description"
                        android:textColor="@color/tv_gray_title" />

                    <vn.tonish.hozo.view.TextViewHozo
                        android:id="@+id/tv_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Can nguoi cham chi lam an"
                        android:textColor="@color/tv_gray_new" />

                </LinearLayout>

                <vn.tonish.hozo.view.TextViewHozo
                    android:id="@+id/tv_see_more_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/arrow_down_blue"
                    android:text="@string/see_more_detail"
                    android:textColor="@color/hozo_bg" />

                <LinearLayout
                    android:id="@+id/more_detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_white_border"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <vn.tonish.hozo.view.MyGridView
                        android:id="@+id/gr_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:numColumns="3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_age_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:text="@string/age"
                            android:textColor="@color/tv_gray_title" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="@string/age_from_hint"
                            android:textColor="@color/tv_gray_new" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_sex_lbl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:text="@string/sex"
                            android:textColor="@color/tv_gray_title" />

                        <vn.tonish.hozo.view.TextViewHozo
                            android:id="@+id/tv_sex"
                            style="@style/tv_style_normal_black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="Nam"
                            android:textColor="@color/tv_gray_new" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="5dp"
                        android:background="#bcccd2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_border_budget_detail"
                        android:gravity="center"
                        android:orientation="vertical">

                        <vn.tonish.hozo.view.TextViewHozo
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="5dp"
                            android:text="@string/budget_detail"
                            android:textColor="@color/tv_gray_new" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp">

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_budget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="1000.000"
                                android:textColor="@color/hozo_bg"
                                android:textSize="40sp" />

                            <vn.tonish.hozo.view.TextViewHozo
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/tv_budget"
                                android:layout_marginTop="14dp"
                                android:layout_toRightOf="@id/tv_budget"
                                android:text="@string/detail_vnd"
                                android:textColor="@color/tv_gray_new"
                                android:textSize="13sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_worker_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="@color/tv_gray_new"
                                android:textSize="22sp" />

                            <vn.tonish.hozo.view.TextViewHozo
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/worker_need"
                                android:textColor="@color/tv_black_new"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_assigner_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="@color/tv_gray_new"
                                android:textSize="22sp" />

                            <vn.tonish.hozo.view.TextViewHozo
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/assiger_count"
                                android:textColor="@color/tv_black_new"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <vn.tonish.hozo.view.TextViewHozo
                                android:id="@+id/tv_empty_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="@color/tv_gray_new"
                                android:textSize="22sp" />

                            <vn.tonish.hozo.view.TextViewHozo
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/empty_count"
                                android:textColor="@color/tv_black_new"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <vn.tonish.hozo.view.ButtonHozo
                    android:id="@+id/btn_bid"
                    style="@style/btn_style_normal_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/work_detail_view_bit" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>